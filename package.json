{
  "name": "snap",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "ui:add": "pnpm --filter @refreshly/ui ui:add",
    "ui:diff": "pnpm --filter @refreshly/ui ui:diff",
    "manypkg:fix": "manypkg fix",
    "postinstall": "manypkg check"
  },
  "dependencies": {
    "@biomejs/biome": "1.8.3",
    "@manypkg/cli": "^0.21.4",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.0.9"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=20"
  }
}
